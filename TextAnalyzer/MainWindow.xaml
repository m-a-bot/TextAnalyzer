<Window x:Class="TextAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextAnalyzer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="391*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="192*"/>
            <RowDefinition Height="229*"/>
        </Grid.RowDefinitions>
        <Button Content="Открыть файл" HorizontalAlignment="Left" Height="25" Margin="580,17,0,0" VerticalAlignment="Top" Width="191" Click="Button_Click"/>
        <Button Content="Сохранить файл" HorizontalAlignment="Left" Height="25" Margin="580,58,0,0" VerticalAlignment="Top" Width="191" Click="Button_Click_1"/>
        <TextBox x:Name="Field" HorizontalAlignment="Left" Height="385" Margin="19,17,0,0" Grid.RowSpan="2" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="543"/>
        <Button Content="Вывести информацию" HorizontalAlignment="Left" Height="25" Margin="580,98,0,0" VerticalAlignment="Top" Width="191" Click="Button_Click_2"/>

    </Grid>
</Window>
